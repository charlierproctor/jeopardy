<style>
	#message {
		display: inline-block;
		padding: 10px;
		border-style: solid; 
		border-radius: 10px; 
		border-width:3px;
		font-size: 24px;
		font-weight: bolder;
		line-height: 30px;
	}
	.failure {
		background-color: pink;
		color: red;
		border-color: red;
	}
	.success {
		background-color: lightgreen;
		color: green;
		border-color: green;
	}
</style>
<% if @status != nil %>
	<div align="center" id="message" class="<%= @status %>"><%= @message %></div>
<% elsif @message != nil %>
	<div align="center" id="message" class="failure"><%= @message %><br> You lose <%= @points %> points.</div>
<% end %>

<h1>Jeopardy</h1>
<style>
	td,th {
		font-size: 30px;
		font-weight: bolder;
		padding: 30px;
	}
	body {
		text-align: center;
	}
	h1 {
		font-size: 100px;
	}
</style>
<h2>Team <%= @team.name %> has <%= @team.points %> points.</h2>
<table align="center">
<% (1..5).each do |i| %>
<tr>
<% (0..2).each do |j| %>
<% question_number = (j*5+i) %>
<% points = i*100 %>
<% if @answered_questions.include?(question_number) %>
<td>
<span style="color:grey"><b><%= points %></b></span>
</td>
<% else %>
<td>
<a href="/questions/<%= question_number %>"><%= points %></a>
</td>
<%end%>
<%end%>
</tr>
<% end %>
</table>
<div style="height:50px"></div>
<%= link_to "Click Here for the Full Standings", "/teams", style: "font-size: 18px; font-weight: bolder" %>
